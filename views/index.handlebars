<!doctype html>

<html>
<head>
	<title>Boilerplate</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
      <link rel="stylesheet" type="text/css" href="css/bootstrap.css">
      <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
</head>

<body>
    <div class="container-fluid>">
      <div class="row">
        <div class="col-md-6" id="facebook">
          	{{#if loggedin}}
            <a><h1>Logout</h1></a>
            <h2>My Facebook</h2>
            <img src="{{response.picture.data.url}}"}}>
            <p>basic info</p1>
              <ul>
                <li>Username: {{response.username}}</li>
                <li>FB ID: {{response.id}}</li>
                <li>Birthday: {{response.birthday}}</li>
                <li>Gender: {{response.gender}}</li>
              <ul>
            {{else}}
                <a href="/auth/facebook"><h1>Login with Facebook</h1></a>
            {{/if}}
        </div>
        <div class="col-md-6" id="twitter">
          <h1>Twitter</h1>
          <h2>Search tweets:</h2>

          <form id="viewTweet" role="form" method="post" action="/">
            <h3>view tweets</h3>
            <div class="form-group">
              <input type="text" class="form-control" id="tweet" placeholder="Search.." name="tweet">
            </div>
            <input type="submit" id="submitBtn" class="btn btn-default" value="View Tweet"></input>
          </form>
          {{#if input}}
          <h3>Viewing Tweets containing: {{input}}</h3>
          {{#each reply.statuses}}
          <h4>{{created_at}}</h4>
          <p>{{text}}</p>
          <p>Retweet count: {{retweet_count}}</p>
          <p>Favorite count: {{favorite_count}}</p>
          {{/each}}
          {{/if}}
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/tweet.js"></script>
</body>
</html>